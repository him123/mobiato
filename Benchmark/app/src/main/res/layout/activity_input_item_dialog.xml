<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:maxEms="12"
            android:text="NAME"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Available Qty: 5"
            android:textColor="@color/bg_screen1"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_13sdp"
             />


        <!-- Selling Layout -->
        <LinearLayout
            android:id="@+id/ll_selling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:maxEms="12"
                android:text="Selling Qty"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/edt_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_row_cust"
                    android:clickable="false"
                    android:ems="3"
                    android:focusable="false"
                    android:hint="Bottles"
                    android:lines="1"
                    android:padding="@dimen/_6sdp" />

                <!--<EditText-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="@dimen/_6sdp"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@drawable/rounded_row_cust"-->
                <!--android:ems="3"-->
                <!--android:hint="Psc"-->
                <!--android:lines="1"-->
                <!--android:padding="@dimen/_6sdp" />-->

            </LinearLayout>
        </LinearLayout>

        <!-- Empty Layout -->
        <LinearLayout
            android:id="@+id/ll_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:maxEms="12"
                android:text="Empty Qty"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/edt_emp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_row_cust"
                    android:ems="3"
                    android:inputType="number"
                    android:hint="Bottles"
                    android:lines="1"
                    android:padding="@dimen/_6sdp" />

                <!--<EditText-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="@dimen/_6sdp"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@drawable/rounded_row_cust"-->
                <!--android:ems="3"-->
                <!--android:hint="Psc"-->
                <!--android:lines="1"-->
                <!--android:padding="@dimen/_6sdp" />-->

            </LinearLayout>
        </LinearLayout>

        <!-- Reason -->
        <LinearLayout
            android:id="@+id/ll_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:maxEms="12"
                android:text="Reason"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/_18sdp"-->
            <!--android:background="@drawable/rounded_row_cust"-->
            <!--android:orientation="horizontal">-->

            <Spinner
                android:id="@+id/sp_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_18sdp"
                android:hint="Psc" />

            <!--<ImageView-->
            <!--android:layout_width="@dimen/_20sdp"-->
            <!--android:layout_height="@dimen/_20sdp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="@dimen/_5sdp"-->
            <!--android:background="@drawable/collpse" />-->
            <!--</RelativeLayout>-->
        </LinearLayout>

        <!-- Coupon Code -->
        <LinearLayout
            android:id="@+id/ll_scan_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_cpn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="left"
                android:maxEms="12"
                android:text="Coupon Code"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_qrcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/img_qr"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:src="@drawable/qr_code" />

                <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1.6"-->
                <!--android:background="@drawable/rounded_row_cust">-->

                <EditText
                    android:id="@+id/edt_coupon_code"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_weight="1.5"
                    android:background="@drawable/rounded_row_cust"
                    android:hint="Scan Or Input"
                    android:inputType="number"
                    android:focusable="false"
                    android:clickable="false"
                    android:paddingLeft="@dimen/_10sdp" />

                <!--</LinearLayout>-->


            </LinearLayout>
        </LinearLayout>

        <!-- Button -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/_10sdp">

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_corner_green"
                android:padding="@dimen/_10sdp"
                android:text="Confirm"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>